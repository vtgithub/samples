<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="true"
                     xmlns:log4j='http://jakarta.apache.org/log4j/'>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %F:%L- %m%n" />
        </layout>
    </appender>


    <appender name="notif" class="org.apache.log4j.RollingFileAppender">
        <param name="append" value="true" />
        <param name="maxFileSize" value="10MB" />
        <param name="maxBackupIndex" value="10" />
        <param name="file" value="/var/log/notification-center/app.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"
                   value="%d{yyyy-MM-dd HH:mm:ss} %-5p %F:%L - %m%n" />
        </layout>
    </appender>

    <logger name="notifLogger" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="notif"/>
    </logger>

    <root>
        <level value="INFO" />
        <appender-ref ref="notif"/>
    </root>

</log4j:configuration>

